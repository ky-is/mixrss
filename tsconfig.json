{
	"compilerOptions": {
		"skipLibCheck": true,
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [ "src/*" ],
		},
		"lib": [
			"dom",
			"esnext",
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"tests/**/*.ts",
	],
}
